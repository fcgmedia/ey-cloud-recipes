export LANG=en_US.UTF-8
export HISTCONTROL=erasedups
export HISTSIZE=10000
export EDITOR='vim'
export PAGER=most
alias ll='ls -al'
alias goat='cd /data/<%= @app_name %>/current'
alias console='goat && ./bin/rails c'
alias grep='grep --colour=auto'
alias tie="tail -n 300 -f ./log/puma.log"

alias sane='echo -e "\\033c";tput is2;stty sane line 1'

# bundle
alias be='goat && ./bin/bundle exec'
